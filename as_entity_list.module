<?php

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * @file
 * Provides entity list functionality for articles, people, and taxonomy terms.
 *
 * All query logic has been moved to service classes in src/Service/.
 * See ArticleQueryService, PersonQueryService, and TermQueryService.
 */

/**
 * Implements hook_help().
 */
function as_entity_list_help($route_name, RouteMatchInterface $route_match)
{
  switch ($route_name) {
    case 'help.as_entity_list':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Lists of people, articles or taxonomy term with selectors for number of items, tag filter, view mode.') . '</p>';

      return $output;
  }
}


